@model Prodotto
@{
    ViewData["Title"] = Model.Nome;
}
<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Prodotti" asp-action="Index">Prodotti</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Nome</li>
        </ol>
    </nav>

    @if (Model != null)
    {
        <div class="card shadow-lg border-0">
            <div class="row g-0">
                <div class="col-md-6">
                    <img src="@Url.Content($"~/{Model.Immagine}")" alt="@Model.Nome" class="img-fluid rounded-start h-100" style="object-fit: cover;" />
                </div>
                <div class="col-md-6">
                    <div class="card-body p-5">
                        <h1 class="card-title mb-4">@Model.Nome</h1>
                        <p class="lead text-primary mb-4"><strong>@Model.Prezzo.ToString("C")</strong></p>
                        <p><strong>Quantità disponibile:</strong> @Model.Quantita</p>
                        <p><strong>Categoria:</strong> @Model.Categoria</p>
                        <hr class="my-4">
                        <h5 class="mb-3">Descrizione</h5>
                        <p class="card-text mb-4">@Model.Dettaglio</p>
                        <div class="d-grid gap-2">
                            <a asp-action="AggiungiAlCarrello" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="fas fa-cart-plus me-2"></i>Aggiungi al Carrello
                            </a>
                            <a asp-action="Index" asp-controller="Prodotti" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Torna ai prodotti
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>Il prodotto non è stato trovato.
        </div>
    }
</div>
