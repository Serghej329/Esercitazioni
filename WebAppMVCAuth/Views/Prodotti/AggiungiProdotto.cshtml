@model AggiungiProdottoViewModel
@{
    ViewData["Title"] = "Aggiungi Prodotto";
}
<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <h1 class="card-title h3 mb-0">@ViewData["Title"]</h1>
        </div>
        <div class="card-body p-5">
            <form method="post" asp-action="AggiungiProdotto" class="needs-validation" novalidate>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Nome" class="form-label">Nome</label>
                        <input asp-for="Prodotto.Nome" class="form-control" required />
                        <span asp-validation-for="Prodotto.Nome" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Prezzo" class="form-label">Prezzo</label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input asp-for="Prodotto.Prezzo" class="form-control" required type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="Prodotto.Prezzo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Quantita" class="form-label">Quantità</label>
                        <input asp-for="Prodotto.Quantita" class="form-control" required type="number" min="0" />
                        <span asp-validation-for="Prodotto.Quantita" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Categoria" class="form-label">Categoria</label>
                        <select asp-for="Prodotto.Categoria" class="form-select" asp-items="@(new SelectList(Model.Categorie))" required>
                            <option value="">Seleziona categoria</option>
                        </select>
                        <span asp-validation-for="Prodotto.Categoria" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Prodotto.Dettaglio" class="form-label">Dettaglio</label>
                        <textarea asp-for="Prodotto.Dettaglio" class="form-control" rows="4" required></textarea>
                        <span asp-validation-for="Prodotto.Dettaglio" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Prodotto.Immagine" class="form-label">URL Immagine</label>
                        <input asp-for="Prodotto.Immagine" class="form-control" required />
                        <span asp-validation-for="Prodotto.Immagine" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Codice" class="form-label">Codice di Sicurezza</label>
                        <input asp-for="Codice" class="form-control" placeholder="Inserisci il codice di sicurezza" required />
                        <span asp-validation-for="Codice" class="text-danger"></span>
                    </div>
                    <div class="col-12 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-plus-circle me-2"></i>Aggiungi Prodotto
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                            <i class="fas fa-times me-2"></i>Annulla
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}