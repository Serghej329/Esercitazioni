@model Prodotto
@{
    ViewData["Title"] = "Cancella Prodotto";
}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-danger text-white py-3">
                    <h1 class="card-title h3 text-center mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body text-center p-5">
                    <img src="@Url.Content($"~/{Model.Immagine}")" alt="@Model.Nome" class="img-fluid rounded mb-4" style="max-height: 200px; object-fit: contain;" />
                    <h2 class="h4 mb-3">@Model.Nome</h2>
                    <p class="lead mb-4"><strong>Prezzo:</strong> @Model.Prezzo.ToString("C")</p>
                    <p class="mb-4">Sei sicuro di voler cancellare questo prodotto?</p>
                    <form method="post" asp-action="CancellaProdotto" asp-route-id="@Model.Id">
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash-alt me-2"></i>Cancella
                        </button>
                        <a asp-action="Index" class="btn btn-secondary ms-2">
                            <i class="fas fa-times me-2"></i>Annulla
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>