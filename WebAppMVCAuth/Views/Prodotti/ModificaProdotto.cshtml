@model ModificaProdottoViewModel
@{
    ViewData["Title"] = "Modifica Prodotto";
}
<div class="container py-5">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white py-3">
            <h1 class="card-title h3 mb-0">@ViewData["Title"]</h1>
        </div>
        <div class="card-body p-5">
            <form asp-action="ModificaProdotto" method="post" class="needs-validation" novalidate>
                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Nome" class="form-label">Nome Prodotto</label>
                        <input asp-for="Prodotto.Nome" class="form-control" required />
                        <span asp-validation-for="Prodotto.Nome" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Prezzo" class="form-label">Prezzo Prodotto</label>
                        <div class="input-group">
                            <span class="input-group-text">€</span>
                            <input asp-for="Prodotto.Prezzo" class="form-control" required type="number" step="0.01" min="0" />
                        </div>
                        <span asp-validation-for="Prodotto.Prezzo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Quantita" class="form-label">Quantità</label>
                        <input asp-for="Prodotto.Quantita" class="form-control" required type="number" min="0" />
                        <span asp-validation-for="Prodotto.Quantita" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Prodotto.Categoria" class="form-label">Categoria</label>
                        <input asp-for="Prodotto.Categoria" class="form-control" required />
                        <span asp-validation-for="Prodotto.Categoria" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Prodotto.Dettaglio" class="form-label">Dettaglio Prodotto</label>
                        <textarea asp-for="Prodotto.Dettaglio" class="form-control" rows="4" required></textarea>
                        <span asp-validation-for="Prodotto.Dettaglio" class="text-danger"></span>
                    </div>
                    <div class="col-12">
                        <label asp-for="Prodotto.Immagine" class="form-label">URL Immagine Prodotto</label>
                        <input asp-for="Prodotto.Immagine" class="form-control" required />
                        <span asp-validation-for="Prodotto.Immagine" class="text-danger"></span>
                    </div>
                </div>
                <input type="hidden" asp-for="Prodotto.Id" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Salva Modifiche
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2">
                        <i class="fas fa-arrow-left me-2"></i>Torna alla lista
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}