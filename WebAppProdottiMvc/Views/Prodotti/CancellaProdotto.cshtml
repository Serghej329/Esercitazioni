            <h1 class="card-title">@ViewData["Title"]</h1>
        </div>

        <div class="card-body my-custom-card">
            <form method="post">
                <div class="form-group">
                    <h1 style="color:black">@Model.Nome</h1>
                    <p><strong>Prezzo:</strong> @Model.Prezzo â‚¬</p>
                    <img src="~/@Model.Immagine" style="width: 200px;" alt="@Model.Nome" />
                </div>
